        <Button x:ConnectionId='5' x:Name="button3" FontFamily="Calibri" FontSize="35" Background="SeaGreen" Content="Create a Group" BorderThickness="0,2,0,2" BorderBrush="Black" HorizontalAlignment="Stretch"  Grid.Row="3" VerticalAlignment="Top" Height="141" Grid.ColumnSpan="2"/>
        <Button x:ConnectionId='6' x:Name="postpagelogout" Content="LogOut" Foreground="Black" Background="YellowGreen" FontSize="17" HorizontalAlignment="Left" VerticalAlignment="Bottom"                              Grid.Row="4" Height="39" Width="87"/>



    </Grid>
