                <VisualState x:ConnectionId='5' x:Name="inch13">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1200" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>


                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <!-- "======================================================/Adaptive Controls=================================================="-->


        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="19*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <RelativePanel x:ConnectionId='6' x:Name="r1" Background="Black">
            <StackPanel x:ConnectionId='24' x:Name="menustack" Height="34"  RelativePanel.AlignRightWithPanel="True" Orientation="Horizontal" Margin="-343,1,0,-1"    >
                <Button x:ConnectionId='26' x:Name="guestb" Width="95" Height="35" Foreground="White" Background="Black"  BorderBrush="White" BorderThickness="2,0,2,0"    >
                    <StackPanel   Orientation="Horizontal"  >
                        <TextBlock Text="&#xE805; " FontFamily="Segoe MDL2 Assets" FontSize="19" />
                        <TextBlock Text="GUEST" FontFamily="Calibri" FontSize="17"   />
                    </StackPanel>
                </Button>

                <TextBlock Text="."/>
                <Button x:ConnectionId='27' x:Name="userb"   Width="95" Height="35" Foreground="White"  BorderBrush="White" BorderThickness="2,0,2,0"                                                                                                >
                    <StackPanel  Orientation="Horizontal">
                        <TextBlock Text="&#xE13D; " FontFamily="Segoe MDL2 Assets" FontSize="19"   />
                        <TextBlock Text="USER" FontFamily="Calibri" FontSize="17"   />
                    </StackPanel>
                </Button>
                <TextBlock Text="." />
                <Button x:ConnectionId='28' x:Name="localnetworkb" Height="35" Width="140" Foreground="White" BorderBrush="White" BorderThickness="2,0,2,0"                                                                                                                        >
                    <StackPanel  Orientation="Horizontal">
                        <TextBlock Text="&#xE877; " FontFamily="Segoe MDL2 Assets" FontSize="19"  />
                        <TextBlock Text="WLAN MODE" FontFamily="Calibri" FontSize="17"   />
                    </StackPanel>
                </Button>

            </StackPanel>
            <Button x:ConnectionId='25' Name="menu" RelativePanel.AlignLeftWithPanel="True" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"  Foreground="White"   Width="38" Height="32" Margin="0,0,-1,0"                     >

            </Button>
        </RelativePanel>
        <SplitView x:ConnectionId='7' Name="split1" Grid.Row="1" DisplayMode="Overlay" OpenPaneLength="110" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">

            <SplitView.Pane>
                <StackPanel Orientation="Vertical" Background="Black"  >
                    <ListBox x:ConnectionId='8'                                             Background="Black"  >

                        <ListBoxItem x:ConnectionId='9' Name="setting" Foreground="White"  >
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" />
                                <TextBlock Text=" Setting"  FontSize="12" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:ConnectionId='10' Name="reportedbug" Foreground="White" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE7BA;" FontFamily="Segoe MDL2 Assets" />
                                <TextBlock Text=" Report a Bug"  FontSize="12" />
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:ConnectionId='11' Name="about" Foreground="White"  >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE2AF;" FontFamily="Segoe MDL2 Assets" />
                                <TextBlock Text=" About Us"  FontSize="12" />
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='12' Name="mainframe" >
                    <Grid  Height="683" Background="Green"  >

                        <!-- "======================================================Adaptive Controls=================================================="-->
 

                        <!-- "======================================================/Adaptive Controls=================================================="-->




                        <TextBlock x:ConnectionId='13' x:Name="t1" Text="Login as Guest" FontSize="70" FontFamily="Calibri"   Margin="447,0,423,579"  HorizontalAlignment="Center" />
                        <TextBlock x:ConnectionId='14' x:Name="t2" Text="#1 Stranger's Chat and Chat Rooms " FontSize="40" FontFamily="Brush Script MT"   Margin="407,91,380,544" HorizontalAlignment="Center" />



                        <Border x:ConnectionId='15' x:Name="b1" Background="#cecbb9" Opacity="0.95"  BorderBrush="Black" BorderThickness="0,8,0,8" CornerRadius="20" Margin="471,165,446,110" HorizontalAlignment="Center" Width="363" />

                        <TextBox x:ConnectionId='16' x:Name="username" TextWrapping="Wrap" PlaceholderText="Name To Display" TextAlignment="Left" VerticalAlignment="Top" Height="40" Margin="502,250,477,0" HorizontalAlignment="Center" Width="301"/>
                        <TextBlock x:ConnectionId='17' x:Name="s1" Text="&#xE170;" VerticalAlignment="Top" FontSize="22" FontFamily="Segoe MDL2 Assets" Foreground="Black" HorizontalAlignment="Center" Height="22" Width="28" Margin="769,260,483,0"/>
                       
                            <RadioButton x:ConnectionId='18' x:Name="sexmale" GroupName="UserSex" Content="Male" IsChecked="True" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="32" Width="121" Margin="631,342,528,0" />
                            <RadioButton x:ConnectionId='19' x:Name="sexfemale" GroupName="UserSex" Content="Female" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="32" Width="114" Margin="721,341,439,0"/>
                       
                        <Button x:ConnectionId='20' x:Name="enter" Background="#ffe049" Content="Enter" Margin="696,421,479,222" HorizontalAlignment="Center" Height="40" VerticalAlignment="Stretch" Width="105"                     />

                        <ComboBox x:ConnectionId='21' x:Name="usercountry" HorizontalAlignment="Center" PlaceholderText="Country" VerticalAlignment="Stretch" Height="40" Width="179" Margin="502,421,599,222" >
                            <ComboBoxItem Tag="in" Content="India">
                                
                            </ComboBoxItem>
                            <ComboBoxItem Tag="usa" Content="USA">
                               
                            </ComboBoxItem>
                            <ComboBoxItem x:ConnectionId='23' Name="ot" Content="Country-Other" IsSelected="True">
                               
                            </ComboBoxItem>
                        </ComboBox>
                        <TextBox x:ConnectionId='22' x:Name="userage" HorizontalAlignment="Center"  TextWrapping="Wrap" PlaceholderText="Age" Width="64" Margin="505,338,711,310"/>

                    </Grid>
                </Frame>
            </SplitView.Content>
        </SplitView>

    </Grid>

</Page>

