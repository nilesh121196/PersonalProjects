                        <Setter Target="s1.Margin" Value="418,260,150,0"/>
                        <Setter Target="sexmale.Margin" Value="281,342,197,0"/>
                        <Setter Target="sexfemale.Margin" Value="352,342,128,0"/>
                        <Setter Target="enter.Margin" Value="345,421,150,222"/>
                        <Setter Target="usercountry.Margin" Value="152,421,273,222"/>
                        <Setter Target="userage.Margin" Value="152,340,381,308"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='4' x:Name="inch8">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="800" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <!--
                        <Setter Target="Layout.Background" Value="Yellow"/>-->
                        <Setter Target="t1.Margin" Value="214,6,205,597"/>
                        <Setter Target="t2.Margin" Value="188,87,181,548"/>
                        <Setter Target="t1.FontSize" Value="65"/>
                        <Setter Target="t2.FontSize" Value="35"/>
                        <Setter Target="b1.Margin" Value="221,164,221,110"/>
                        <Setter Target="username.Margin" Value="252,250,250,0"/>
                        <Setter Target="s1.Margin" Value="518,260,250,0"/>
                        <Setter Target="sexmale.Margin" Value="381,342,297,0"/>
                        <Setter Target="sexfemale.Margin" Value="452,342,228,0"/>
