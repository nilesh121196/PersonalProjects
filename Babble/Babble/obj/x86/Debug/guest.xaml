                        <Setter Target="s1.Margin" Value="318,260,50,0"/>
                        <Setter Target="sexmale.Margin" Value="181,342,97,0"/>
                        <Setter Target="sexfemale.Margin" Value="252,342,28,0"/>
                        <Setter Target="enter.Margin" Value="245,421,50,222"/>
                        <Setter Target="usercountry.Margin" Value="52,421,173,222"/>
                        <Setter Target="userage.Margin" Value="52,340,281,308"/>
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='3' x:Name="inch6">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <!--
                                         <Setter Target="Layout.Background" Value="Red"/>-->
                        <Setter Target="t1.Margin" Value="128,0,120,615"/>
